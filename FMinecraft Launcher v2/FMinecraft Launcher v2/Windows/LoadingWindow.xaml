<Window x:Class="FMinecraft_Launcher_v2.Windows.LoadingWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FMinecraft Launcher" Height="200" Width="300"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        WindowStartupLocation="CenterScreen" Topmost="True" Closing="WindowClosing">
    <Border CornerRadius="10" 
            Background="#FF2A2A2A" 
            BorderBrush="#404040" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="FMinecraft Launcher"
                       FontSize="20"
                       Foreground="#00FF00"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                <Grid Width="150" Height="4" Background="#333333">
                    <!-- Background for the progress bar -->
                    <Rectangle Fill="#333333" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                        <Grid Width="150" Height="4" Background="#333333">
                            <!-- The actual progress bar -->
                            <Rectangle x:Name="ProgressBar" Width="30" HorizontalAlignment="Left" Fill="#00FF00">
                                <Rectangle.Triggers>
                                    <EventTrigger RoutedEvent="Rectangle.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation
                                Storyboard.TargetProperty="(Rectangle.RenderTransform).(TranslateTransform.X)"
                                From="-30" To="150"
                                Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Rectangle.Triggers>
                                <Rectangle.RenderTransform>
                                    <TranslateTransform/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                    </StackPanel>
                </Grid>
                <TextBlock x:Name="LoadingText"
                           Text="Initializing..."
                           Foreground="#CCCCCC"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="TextBlock.Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="Opacity"
                                        From="1" To="0.3"
                                        Duration="0:0:0.5"
                                        AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
            </StackPanel>

            <TextBlock x:Name="LoadLabel" Grid.Row="2"
                       Text="Downloading resources"
                       Foreground="Gray"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
    </Border>
</Window>